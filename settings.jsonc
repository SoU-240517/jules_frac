{
    // --- フラクタル描画エンジン設定 ---
    // アプリケーションが現在使用している描画設定です。
    "engine_settings": {
        // --- 共通パラメータ ---
        // すべてのフラクタルタイプで共通して使用されるパラメータです。
        "common_parameters": {
            "center_real": -0.5,          // 描画中心の実部
            "center_imag": 0.0,           // 描画中心の虚部
            "width": 3.0,                 // 描画範囲の幅
            "height": 2.2899590163934427,  // 描画範囲の高さ
            "max_iterations": 100,        // 最大計算回数
            "escape_radius": 2.0          // 発散判定半径
        },
        // --- フラクタルプラグイン設定 ---
        "fractal_plugin_name": "Mandelbrot", // 使用するフラクタルプラグイン名
        "fractal_plugin_parameters": {},     // フラクタルプラグイン固有のパラメータ
        // --- 発散領域の着色設定 ---
        "coloring_divergent": {
            "plugin_name": "スムーズカラー", // 使用する着色プラグイン名
            "plugin_parameters": {
                "color_scale": 1.0 // 色の変化のスケール
            },
            "pack_name": "デフォルト",   // カラーマップのパック名
            "map_name": "グレースケール"  // カラーマップ名
        },
        // --- 非発散領域（集合内部）の着色設定 ---
        "coloring_non_divergent": {
            "plugin_name": "複素ポテンシャル", // 使用する着色プラグイン名
            "plugin_parameters": {
                "color_scale": 1.0,      // 色の変化のスケール
                "potential_offset": 0.0, // ポテンシャルのオフセット
