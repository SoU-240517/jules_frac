            },
            "pack_name": "デフォルト",   // カラーマップのパック名
            "map_name": "グレースケール"  // カラーマップ名
        }
    },
    // --- アプリケーション全体の設定 ---
    "app_settings": {
        // --- ログ設定 ---
        "logging": {
            "level": "INFO",   // ログレベル (e.g., DEBUG, INFO, WARNING, ERROR)
            "enabled": true    // ログ出力の有効/無効
        },
        // 終了時に現在のエンジン設定を保存するかどうか
        "save_engine_settings": true,
        // UIのスタイルシートファイルへのパス
        "stylesheet_path": "resources/style.qss",
        // --- Numba JITコンパイラ設定 ---
        "numba_settings": {
            // Numbaのキャッシュを有効にするか
            "cache_enabled": true,
            // 終了時にNumbaのキャッシュをクリアするか
            "clear_cache_on_exit": false
        }
    },
